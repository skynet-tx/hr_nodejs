<div class="row"><div id="alert-message"></div></div>
<form id="add-department-form" class="form-horizontal" role="form">
    <div class="form-group">
        <label for="inputName" class="col-lg-4 control-label">Department name</label>

        <div class="col-lg-7">
            <input type="text" name="name" class="form-control" id="inputName" placeholder="Enter department name">
        </div>
    </div>

    <div class="form-group">
        <label for="inputDescription" class="col-lg-4 control-label">Description</label>

        <div class="col-lg-7">
            <textarea class="form-control" name="description" id="inputDescription" placeholder="Enter short description about department"></textarea>
        </div>
    </div>
</form>

